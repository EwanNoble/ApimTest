{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourceEnvironmentName": {
            "defaultValue": "vnet",
            "type": "string"
        },
        "serviceName": {
            "defaultValue": "integration",
            "type": "string"
        },
        "sqlServerAdminUsername": {
            "defaultValue": "sqladmin",
            "type": "string"
        },
        "sqlServerAdminPassword": {
            "type": "securestring"
        }
    },
    "variables": {
        "deploymentUrlBase": "https://raw.githubusercontent.com/SkillsFundingAgency/das-platform-building-blocks/as-vnet-integration/templates/",
        "resourceNamePrefix": "[toLower(concat('dev-', parameters('resourceEnvironmentName'),'-', parameters('serviceName')))]",
        "vnetName": "[concat(variables('resourceNamePrefix'), '-vnet')]",
        "interalSubnetName": "[concat(variables('resourceNamePrefix'), '-int-app-sn-01')]",
        "externalSubnetName": "[concat(variables('resourceNamePrefix'), '-ext-app-sn-01')]",
        "clientAppServiceName": "[concat(variables('resourceNamePrefix'), 'cli-as')]",
        "clientAppServicePlanName": "[concat(variables('resourceNamePrefix'), 'cli-asp')]",
        "apiAppServiceName": "[concat(variables('resourceNamePrefix'), 'api-as')]",
        "apiAppServicePlanName": "[concat(variables('resourceNamePrefix'), 'api-asp')]",
        "sqlServerName": "[concat(variables('resourceNamePrefix'), 'api-sql')]",
        "apiUrl": "[concat('https://', variables('apiAppServiceName'), '.azurewebsites.net/api/test')]",
        "databaseName": "testdb",
        "storageAccountName": "[toLower(concat('dev', parameters('resourceEnvironmentName'), parameters('serviceName'),'str'))]",
        "cosmosDbName": "[concat(variables('resourceNamePrefix'), '-cdb')]",
        "subnetServiceEndpointList": [
            "Microsoft.Web",
            "Microsoft.Sql",
            "Microsoft.Storage",
            "Microsoft.AzureCosmosDB"
        ],
        "subnetDelegations": [
            {
                "name": "webapp",
                "properties": {
                    "serviceName": "Microsoft.Web/serverFarms",
                    "actions": [
                        "Microsoft.Network/virtualNetworks/subnets/action"
                    ]
                }
            }
        ]
    },
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "virtual-network",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'virtual-network.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "armVnetName": {
                        "value": "[variables('vnetName')]"
                    },
                    "armVnetAddressSpaceCIDR": {
                        "value": "10.0.0.0/16"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "internal-subnet",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'subnet.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualNetworkName": {
                        "value": "[variables('vnetName')]"
                    },
                    "subnetName": {
                        "value": "[variables('interalSubnetName')]"
                    },
                    "subnetAddressPrefix": {
                        "value": "10.0.0.0/24"
                    },
                    "serviceEndpointList": {
                        "value": "[variables('subnetServiceEndpointList')]"
                    },
                    "delegations": {
                        "value": "[variables('subnetDelegations')]"
                    }
                }
            },
            "dependsOn": [
                "virtual-network"
            ]
        },
        {
            "apiVersion": "2017-05-10",
            "name": "external-subnet",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'subnet.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualNetworkName": {
                        "value": "[variables('vnetName')]"
                    },
                    "subnetName": {
                        "value": "[variables('interalSubnetName')]"
                    },
                    "subnetAddressPrefix": {
                        "value": "10.0.0.0/24"
                    },
                    "serviceEndpointList": {
                        "value": "[variables('subnetServiceEndpointList')]"
                    },
                    "delegations": {
                        "value": "[variables('subnetDelegations')]"
                    }
                }
            },
            "dependsOn": [
                "virtual-network"
            ]
        },
        {
            "apiVersion": "2017-05-10",
            "name": "api-app-service-plan",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'app-service-plan.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServicePlanName": {
                        "value": "[variables('apiAppServicePlanName')]"
                    },
                    "aspSize": {
                        "value": "1"
                    },
                    "aspInstances": {
                        "value": 2
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "client-app-service-plan",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'app-service-plan.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServicePlanName": {
                        "value": "[variables('clientAppServicePlanName')]"
                    },
                    "aspSize": {
                        "value": "1"
                    },
                    "aspInstances": {
                        "value": 2
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "api-application-insights",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'application-insights.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appInsightsName": {
                        "value": "[variables('apiAppServiceName')]"
                    },
                    "attachedService": {
                        "value": "[variables('apiAppServiceName')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "client-application-insights",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'application-insights.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appInsightsName": {
                        "value": "[variables('clientAppServiceName')]"
                    },
                    "attachedService": {
                        "value": "[variables('clientAppServiceName')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "api-app-service",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'app-service.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServiceName": {
                        "value": "[variables('apiAppServiceName')]"
                    },
                    "appServicePlanName": {
                        "value": "[variables('apiAppServicePlanName')]"
                    },
                    "appServicePlanResourceGroup": {
                        "value": "[resourceGroup().name]"
                    },
                    "ipSecurityRestrictions": {
                        "value": [
                            {
                                "name": "[variables('interalSubnetName')]",
                                "action": "Allow",
                                "priority": 100,
                                "vnetSubnetResourceId": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('interalSubnetName'))]"
                            },
                            {
                                "name": "[variables('externalSubnetName')]",
                                "action": "Allow",
                                "priority": 102,
                                "vnetSubnetResourceId": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('externalSubnetName'))]"
                            }
                        ]
                    },
                    "appServiceAppSettings": {
                        "value": [
                            {
                                "name": "Environment",
                                "value": "[parameters('resourceEnvironmentName')]"
                            },
                            {
                                "name": "DatabaseConnectionString",
                                "value": "[concat('Server=tcp:',reference(variables('sqlserverName')).fullyQualifiedDomainName,',1433;Initial Catalog=',variables('databaseName'),';Persist Security Info=False;User ID=',parameters('sqlServerAdminUsername'),';Password=',parameters('sqlServerAdminPassword'),';MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;')]"
                            },
                            {
                                "name": "StorageConnectionString",
                                "value": "[reference('storage-account').outputs.storageConnectionString.value]"
                            },
                            {
                                "name": "CosmosDbEndpointUri",
                                "value": "[concat('https://',variables('cosmosDbName'),'.documents.azure.com:443/')]"
                            },
                            {
                                "name": "CosmosDbPrimaryKey",
                                "value": "[reference('cosmos-db').outputs.PrimaryMasterKey.Value]"
                            }
                        ]
                    },
                    "subnetResourceId": {
                        "value": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('interalSubnetName'))]"
                    }
                }
            },
            "dependsOn": [
                "internal-subnet",
                "external-subnet",
                "api-app-service-plan"
            ]
        },
        {
            "apiVersion": "2017-05-10",
            "name": "client-app-service",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'app-service.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServiceName": {
                        "value": "[variables('clientAppServiceName')]"
                    },
                    "appServicePlanName": {
                        "value": "[variables('clientAppServicePlanName')]"
                    },
                    "appServicePlanResourceGroup": {
                        "value": "[resourceGroup().name]"
                    },
                    "appServiceAppSettings": {
                        "value": [
                            {
                                "name": "Environment",
                                "value": "[parameters('resourceEnvironmentName')]"
                            },
                            {
                                "name": "ApiUrl",
                                "value": "[variables('apiUrl')]"
                            }
                        ]
                    },
                    "subnetResourceId": {
                        "value": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('externalSubnetName'))]"
                    }
                }
            },
            "dependsOn": [
                "internal-subnet",
                "external-subnet",
                "client-app-service-plan"
            ]
        },
        {
            "name": "[variables('sqlServerName')]",
            "type": "Microsoft.Sql/servers",
            "apiVersion": "2015-05-01-preview",
            "location": "[resourceGroup().location]",
            "properties": {
                "administratorLogin": "[parameters('sqlServerAdminUserName')]",
                "administratorLoginPassword": "[parameters('sqlServerAdminPassword')]"
            },
            "resources": [
                {
                    "type": "databases",
                    "apiVersion": "2014-04-01",
                    "location": "[resourceGroup().location]",
                    "name": "[variables('databaseName')]",
                    "properties": {},
                    "dependsOn": [
                        "[variables('sqlServerName')]"
                    ]
                }
            ]
        },
        {
            "apiVersion": "2017-05-10",
            "name": "sql-server-firewall-rule",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'sql-server-firewall-rules.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "serverName": {
                        "value": "[variables('sqlServerName')]"
                    },
                    "subnetResourceIdList": {
                        "value": [
                            "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('interalSubnetName'))]",
                            "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('externalSubnetName'))]"
                        ]
                    }
                }
            },
            "dependsOn": [
                "internal-subnet",
                "external-subnet",
                "[variables('sqlServerName')]"
            ]
        },
        {
            "apiVersion": "2017-05-10",
            "name": "storage-account",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'storage-account-arm.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[variables('storageAccountName')]"
                    },
                    "subnetResourceIdList": {
                        "value": [
                            "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('interalSubnetName'))]",
                            "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('externalSubnetName'))]"
                        ]
                    }
                }
            },
            "dependsOn": [
                "internal-subnet",
                "external-subnet"
            ]
        },
        {
            "apiVersion": "2017-05-10",
            "name": "cosmos-db",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'cosmos-db.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "cosmosDbName": {
                        "value": "[variables('cosmosDbName')]"
                    },
                    "cosmosDbType": {
                        "value": "MongoDB"
                    },
                    "defaultConsistencyLevel": {
                        "value": "Strong"
                    },
                    "enableVirtualNetworkFilter": {
                        "value": false
                    },
                    "subnetResourceIdList": {
                        "value": [
                            "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('interalSubnetName'))]",
                            "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('externalSubnetName'))]"
                        ]
                    }
                }
            },
            "dependsOn": [
                "internal-subnet",
                "external-subnet"
            ]
        }
    ],
    "outputs": {
        "clientAppServiceName": {
            "type": "string",
            "value": "[variables('clientAppServiceName')]"
        },
        "apiAppServiceName": {
            "type": "string",
            "value": "[variables('apiAppServiceName')]"
        }
    }
}